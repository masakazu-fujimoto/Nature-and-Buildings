<!DOCTYPE html>
<html>
  <head>
    <title>Sample2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="heading">
        <h1 class="title">記念すべき第一号</h1>
      </div>
      <div class="navbar">
        <div class="nav-lists">
          <%= search_form_for @q, url: search_photos_path do |f| %>
            <%= f.label :name_or_user_nickname_cont, 'キーワード入力' %>
            <%= f.search_field :name_or_user_nickname_cont %>
            <%= f.submit '検索' %>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
